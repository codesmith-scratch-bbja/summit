{
  "root": true,
  "ignorePatterns": ["**/test", "**/__tests__"],
  "env": {
    "node": true,
    "browser": true,
    "es2021": true
  },
  "extends": ["eslint:recommended", "plugin:react/recommended"],
  "parserOptions": { "sourceType": "module" },
  "rules": {
    "no-unused-vars": ["off", { "vars": "local" }],
    "prefer-const": "warn",
    "quotes": ["warn", "single"],
    "space-infix-ops": "warn"
  }
}
